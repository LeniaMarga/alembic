---

{% set currentPage = page.url | url %}

<!DOCTYPE html>
<html>
  <head>
    <title>⚗️ Alembic | {{ title }}</title>
    <meta charset="utf8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="{{ '/docs.css' | url }} " />
    <script type="module" src="{{ '/docs.js' | url }}"></script>
  </head>
  <body class="docsLayout">
    <sidebar-layout space="0" sideWidth="25ch" contentMin="66%">
      <header class="docsLayout-header">
        <nav class="docsNav">
          <a class="docsNav-brand" href="{{ '/' | url }}">⚗️ Alembic</a>
          <ul role="list">
            {% for item in nav %}
            <li>
              {% set pageUrl = item.url | url %}
              <a
                class="docsNav-item"
                href="{{ pageUrl }}"
                {{ 'aria-current="page"' if pageUrl == currentPage }}
              > {{ item.name }} </a>
            </li>
            {% endfor %}
          </ul>
        </nav>
      </header>
      <main class="docsLayout-main"> {{ content | safe }} </main>
    </sidebar-layout>
  </body>
</html>
